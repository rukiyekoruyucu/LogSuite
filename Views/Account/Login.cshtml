@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background-color: #001f3f;">
    <div class="row w-75 shadow-lg" style="min-height: 500px; background-color: white; border-radius: 10px; overflow: hidden;">

        <!-- Sol taraf: Giriş Formu -->
        <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
            <h2 class="text-dark mb-4">Admin Girişi</h2>

            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group mb-3">
                    <label for="username">Kullanıcı Adı (İsim Soyisim):</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Ahmet Yılmaz" required />
                </div>
                <div class="form-group mb-4">
                    <label for="password">Şifre:</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.LoginError))
            {
                <div class="text-danger mt-3">
                    <p>@ViewBag.LoginError</p>
                </div>
            }
        </div>
        <!-- Sağ taraf: Logo ve Hoşgeldiniz -->
        <div class="col-md-6 text-white d-flex flex-column align-items-center justify-content-center" style="background-color: #d0e7ff;">
            <img src="~/NewFolder1/Retro (2).png" alt="Logo" class="img-fluid mb-3" style="max-height: 200px;" />
            <h3 class="text-dark">Hoşgeldiniz</h3>
            <p class="text-dark">SmartDoors sistemine giriş yapın</p>
        </div>
