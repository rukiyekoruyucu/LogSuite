@model SmartDoors.Models.User

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserID" />
    <div>
        <label>Ad</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Soyad</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>Kart ID</label>
        <input asp-for="CardID" required />
    </div>
    <div>
        <label>Kapı Yetkisi</label>
        <select asp-for="DoorAccess">
            <option value="true" selected="@Model.DoorAccess">Evet</option>
            <option value="false" selected="@(Model.DoorAccess == false)">Hayır</option>
        </select>
    </div>
    <button type="submit">Güncelle</button>
</form>
