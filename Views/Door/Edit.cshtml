@model SmartDoors.Models.Door

@{
    ViewData["Title"] = "Kapı Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DoorID" />

    <div class="form-group mb-3">
        <label asp-for="DoorName" class="form-label"></label>
        <input asp-for="DoorName" class="form-control" />
        <span asp-validation-for="DoorName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EntryDeviceID" class="form-label">Giriş Cihazı ID</label>
        <input asp-for="EntryDeviceID" class="form-control" />
        <span asp-validation-for="EntryDeviceID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExitDeviceID" class="form-label">Çıkış Cihazı ID</label>
        <input asp-for="ExitDeviceID" class="form-control" />
        <span asp-validation-for="ExitDeviceID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
